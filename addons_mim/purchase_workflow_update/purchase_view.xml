<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	    <record id="base.group_Annuler_paiement" model="res.groups">
            <field name="name">Achats / Annuler paiement</field>
        </record>
        <record id="base.group_etablir_paiement" model="res.groups">
            <field name="name">Achats / Etablir paiement</field>
        </record>
		<record id="purchase_order_form_inherit1" model="ir.ui.view">
			<field name="name">purchase_order.form.inherit1</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />
			<field name="arch" type="xml">
			    <data>
			        <xpath expr="/form/header/button[@name='purchase_approve']" position="after">
			            	<button name="wkf_payement_not_ok" type="object" class="oe_highlight" string="Annuler Paiement" groups="base.group_Annuler_paiement" attrs="{'invisible': ['|',('paiement_etabli','!=','Oui'), ('state','not in', ('approved','done'))]}"/>
							<button name="wkf_payement_ok" type="object" class="oe_highlight" string="Etablir Paiement" groups="base.group_etablir_paiement" attrs="{'invisible': ['|',('paiement_etabli','=','Oui'), ('state','not in', ('approved','done'))]}"/>
							<!--  <button name="wkf_recept_invoice" type="object" class="oe_highlight" string="Recevoir facture" states="payement_ok"/>-->
					</xpath>    
				    <!--<xpath expr="/form/header/field[@name='state']" position="replace">
							<field name="state" widget="statusbar" 
							    statusbar_visible="draft,sent,approved,done" 
							    statusbar_colors="{&quot;except_picking&quot;:&quot;red&quot;,&quot;except_invoice&quot;:&quot;red&quot;,&quot;confirmed&quot;:&quot;blue&quot;}" 
							    readonly="1"/>
					</xpath>-->
					<xpath expr="/form/sheet/group/group/field[@name='partner_id']" position="after">
							<field name="paiement_etabli" invisible="1"/>
							<field name="facture_recue" invisible="1"/>
					</xpath> 
					<!--  <xpath expr="/form/header/button[@name='view_picking']" position="replace">
							<button name="view_picking" string="Recevoir les articles" type="object" attrs="{'invisible': ['|', ('shipped','=',True), ('state','!=', 'approved')]}" class="oe_highlight"/>
					</xpath>-->
				</data>
			</field>
		</record>
		<record id="purchase_order_tree_inherit1" model="ir.ui.view">
			<field name="name">purchase_order.tree.inherit1</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_tree" />
			<field name="arch" type="xml">
			    <data>
			        <xpath expr="/tree/field[@name='state']" position="after">
							<field name="paiement_etabli"/>
							<field name="facture_recue"/>
					</xpath>
				</data>
			</field>
		</record>
	</data>
</openerp>