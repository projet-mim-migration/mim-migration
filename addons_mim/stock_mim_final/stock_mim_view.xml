<openerp>
	<data>
	    
	    <record id="base.group_contre_mesure" model="res.groups">
            <field name="name">Utilisteurs contre mesure</field>
        </record>
        <record id="base.group_fiche_debit" model="res.groups">
            <field name="name">Utilisteurs fiche debit</field>
        </record>
	    
		<record id="view_move_form" model="ir.ui.view">
			<field name="name">stock.move.form.inherit2</field>
			<field name="model">stock.move</field>
			<field name="inherit_id" ref="stock.view_move_form" />
			<field name="arch" type="xml">
					<xpath expr="/form/header/button[@name='force_assign']" position="after">
					    <button name="contre_mesure" states="draft,confirmed,assigned,flowsheeting,contre_mesure" string="Contre mesure" class="oe_highlight" type="workflow" groups="base.group_contre_mesure"/>
						<button name="annuler_contre_mesure" states="contre_mesure" string="Annuler contre mesure" type="workflow" groups="base.group_contre_mesure"/>
						<button name="flow_sheet" states="draft,confirmed,assigned,contre_mesure,flowsheeting" string="Fiche Débit" class="oe_highlight" type="workflow" groups="base.group_fiche_debit"/>
						<button name="flow_sheet_cancel" states="flowsheeting" string="Annuler Fiche Débit" type="workflow" groups="base.group_fiche_debit"/>
					</xpath >
					<field name="state" position="replace">
                    	<field name="state" widget="statusbar" statusbar_visible="draft,confirmed,contre_mesure,flowsheeting,assigned,done" statusbar_colors='{"waiting":"blue","confirmed":"blue"}'/>
                	</field>
			</field>
		</record>
	</data>
</openerp>
