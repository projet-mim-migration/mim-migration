<openerp>
	<data>
		<record id="base.group_date_livraison" model="res.groups">
            <field name="name">Ecriture Date de livraison</field>
        </record>
		
		<record id="view_picking_form_inherit7" model="ir.ui.view">
			<field name="name">stock.picking.form.inherit7</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="groups_id" eval="[(4, ref('base.group_date_livraison'))]"/>
			<field name="arch" type="xml">    
			    <data>
				    <xpath expr="/form[@string='Transfer']/sheet/group/group/field[@name='date']" position="replace">
						<!--<field name="date" string="Date de livraison" on_change="onchange_fields()"/> -->
					 	<label for="date" attrs="{'invisible': [('picking_type_id', '=', 2)]}"/>
						<label for="date" string="Date de livraison" attrs="{'invisible': [('picking_type_id', '!=', 2)]}"/>
						<field name="date" on_change="onchange_fields()" nolabel="1" class="oe_inline"/>
					</xpath>
				</data>
			</field>
		</record>
		
		<record id="view_picking_form_inherit10" model="ir.ui.view">
			<field name="name">stock.picking.form.inherit10</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">    
			    <data>
				    <xpath expr="/form[@string='Transfer']/sheet/group/group/field[@name='date']" position="replace">
							<field name="date" string="Date de livraison" on_change="onchange_fields()" readonly="1"/>
					</xpath>
				</data>
			</field>
		</record>
		
		<record id="view_picking_form_inherit8" model="ir.ui.view">
			<field name="name">stock.picking.out.form.inherit8</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">    
			    <xpath expr="/form[@string='Transfer']/sheet/group/group/field[@name='min_date']" position="replace">
						<field name="min_date" string="Date de contre-mesure"/>
				</xpath>
			</field>
		</record>
		
		<record id="view_picking_form_inherit9" model="ir.ui.view">
			<field name="name">stock.picking.form.inherit9</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">    
			    <data>
				    <xpath expr="/form[@string='Transfer']/sheet/group/group/field[@name='date']" position="after">
						<field name="date_changed" invisible="1"/>
						<field name="motivation" class="oe_edit_only" placeholder="Veuillez saisir la motivation de la modification" 
						    attrs="{'invisible': [('date_changed','=',False)]}"/>
					</xpath>
				</data>
			</field>
		</record>		
</data>
</openerp>