<odoo>
	<data>
		<record id="stock_picking_tree9" model="ir.ui.view">
			<field name="name">stock.picking.out.tree.inherit9</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.vpicktree" />
			<field name="arch" type="xml">
					<xpath expr="//field[@name='origin']" position="before">
						<field name="date_changed" on_change="onchange_fields()" nolabel="1" class="oe_inline"/>
					</xpath>
			</field>
		</record>

		<record id="stock_picking_tree11" model="ir.ui.view">
			<field name="name">stock.picking.out.tree.inherit11</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.vpicktree" />
			<field name="arch" type="xml">
			    	<xpath expr="//field[@name='origin']" position="before">
						<field name="motivation" class="oe_edit_only" placeholder="Veuillez saisir la motivation de la modification"
						    attrs="{'invisible': [('date_changed','=',False)]}"/>
					</xpath>
			</field>
		</record>
	</data>
</odoo>

