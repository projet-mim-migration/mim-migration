<?xml version="1.0" encoding="UTF-8"?>

<odoo>
	<record model="ir.ui.view" id="view_contremesure_form">
        <field name="name">contre_mesure.form</field>
        <field name="model">contremesure</field>
        <field name="arch" type="xml">
            <form string="Saisie contre mesure">
                <group colspan="2">
                    <field name="largeur"/>
                    <field name="hauteur"/>
                </group>
                <footer>
                	<button name="update_contre_mesure" string="Valider" type="object" class="oe_highlight"/>
                     or
                    <button string="Annuler" class="oe_link" special="cancel"/>
            	</footer>
            </form>
        </field>
	</record>
</odoo>