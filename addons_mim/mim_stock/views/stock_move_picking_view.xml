<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_move_picking_form" model="ir.ui.view">
            <field name="name">stock.move.form.inherit</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <button name="action_confirm" 
                            states="draft,cancel" 
                            string="Process Later" 
                            type="object" 
                            class="oe_highlight"/>
                    <button name="contre_mesure1" 
                            states="draft,waiting,confirmed" 
                            string="Contre mesure" 
                            class="oe_highlight" 
                            type="object" 
                            groups="mim_stock.group_frederic"/>
                    <button name="annuler_contre_mesure" 
                            states="contre_mesure" 
                            string="Annuler contre mesure" 
                            type="object" 
                            groups="mim_stock.group_frederic"/>
                    <button name="flow_sheet" 
                            states="contre_mesure" 
                            string="Fiche Débit" 
                            type="object" 
                            class="oe_highlight" />
                    <button name="flow_sheet_cancel" 
                            states="flowsheeting" 
                            type="object" 
                            string="Annuler Fiche Débit" />        
                </xpath >

                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" 
                           widget="statusbar" 
                           statusbar_visible="draft,confirmed,contre_mesure,flowsheeting,assigned,done"
                           statusbar_colors='{"waiting":"blue","confirmed":"blue"}'/>
                </xpath >
            </field>
        </record>
    </data>
</odoo>

