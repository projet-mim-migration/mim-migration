<?xml version="1.0"?>
<openerp>
	<data>
        <record id="base.group_approbation" model="res.groups">
            <field name="name">Approbations</field>
        </record>
		<record id="purchase.purchase_order_form_inherit2" model="ir.ui.view">
			<field name="name">purchase.order.form.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />

			<field name="arch" type="xml">
				<xpath expr="/form/header/button[@name='purchase_approve' and @states='confirmed']" position="replace">
					<button name="purchase_approve" states="confirmed" string="Approve Order" class="oe_highlight" groups="base.group_approbation" />
				</xpath>
			</field>
		</record>
	</data>
</openerp>