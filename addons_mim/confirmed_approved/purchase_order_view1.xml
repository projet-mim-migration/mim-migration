<?xml version="1.0"?>
<openerp>
	<data>
	    <record id="base.group_confirmation" model="res.groups">
            <field name="name">Confirmations</field>
        </record>
		<record id="purchase.purchase_order_form_inherit3" model="ir.ui.view">
			<field name="name">purchase.order.form.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />

			<field name="arch" type="xml">
				<xpath expr="/form/header/button[@name='purchase_confirm' and @states='draft']" position="replace">
                    <button name="purchase_confirm" states="draft" string="Confirm Order" groups="base.group_confirmation"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp>