<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="stock.move">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th name="location_id"><strong>Reference emplacement d'origine</strong></th>
                                    <th name="location_dest_id" ><strong>Emplencement de destination</strong></th>
                                    <th name="min_date"><strong>Date de contre m√©sure</strong></th>
                                    <th name="date" ><strong>Date de livraison</strong></th>
                                    <th name="product_id" ><strong>Article</strong></th>
                                    <th name="product_uom_qty" ><strong>Demande initiale</strong></th>
                                    <th name="date_expected" ><strong>Date prevue</strong></th>
                                    <th name="origin" ><strong>Document d'origin</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td name="location_id">
                                        <span t-field="o.location_id"/>
                                    </td>
                                    <td name="location_dest_id">
                                        <span t-field="o.location_dest_id"/>
                                    </td>
                                    <td name="min_date" width="20%">
                                        <span t-field="o.min_date"/>
                                    </td>
                                    <td name="date" width="20%">
                                        <span t-field="o.date"/>
                                    </td>
                                    <td name="product_id" width="20%">
                                        <span t-field="o.product_id"/>
                                    </td>
                                    <td name="product_uom_qty" width="20%">
                                        <span t-field="o.product_uom_qty"/>
                                    </td>
                                    <td name="date_expected" width="20%">
                                        <span t-field="o.date_expected"/>
                                    </td>
                                    <td name="origin" width="20%">
                                        <span t-field="o.origin"/>
                                    </td>
                                </tr>
                            </tbody>
                            </table>

                        </div>
                    </t>
                 </t>
             </t>
        </template>
    </data>
</odoo>
